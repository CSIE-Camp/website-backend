datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Accounts {
  id        String     @id @default(cuid())
  CreatedAt DateTime   @default(now())
  Email     String     @unique
  Password  String?
  Profiles  Profiles[]
}

//Accounts and Profile should have a 1-1 relationship
model Profiles {
  id                            Int       @id @default(autoincrement())
  Name                          String
  Gender                        String    @db.Char(1)
  School                        String?
  DOB                           DateTime?
  ID_Doc                        String?
  Number                        String?
  Facebook                      String?
  Diet                          String
  Diseases                      String?
  COVID_14Days                  Boolean?
  Emergency_ContactName         String?
  Emergency_ContactNumber       String?
  Emergency_ContactRelationship String?
  Emergency_BloodType           Int?
  Github                        String?
  Discord                       String?
  Account                       Accounts? @relation(fields: [AccountId], references: [id])
  AccountId                     String?
}

enum Roles {
  DEVELOPER
  ADMIN
  USER
}

model BloodTypes {
  id        Int    @id @default(autoincrement())
  BloodType String
}
